{
  "name": "tree-sitter-clemento",
  "version": "0.1.0",
  "description": "Clemento grammar for tree-sitter",
  "main": "bindings/node",
  "keywords": [
    "parsing",
    "incremental",
    "clemento"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "node-addon-api": "^7.0.0",
    "node-gyp-build": "^4.6.0"
  },
  "devDependencies": {
    "tree-sitter-cli": "^0.20.8"
  },
  "peerDependencies": {
    "tree-sitter": "^0.20.0"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "scripts": {
    "install": "node-gyp-build",
    "prebuildify": "prebuildify --napi --strip",
    "build": "tree-sitter build-wasm",
    "test": "tree-sitter test"
  },
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/**",
    "queries/**",
    "src/**"
  ],
  "tree-sitter": [
    {
      "scope": "source.clemento",
      "file-types": [
        "clem",
        "clemento"
      ]
    }
  ]
}
